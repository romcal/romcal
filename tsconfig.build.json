{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": false,
    "incremental": false,
    "lib": [
      "ES5",
      "ES6",
      "ES7",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext",
      "ESNext.Symbol",
      "DOM",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }]
  }
}
