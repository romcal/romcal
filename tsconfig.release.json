{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "es2020",
    "target": "es2020",
    "lib": ["ES2020", "ESNext"],
    "moduleResolution": "node",
    "rootDir": ".",
    "removeComments": true,
    "declaration": true,
    "declarationDir": "tmp/dts",
    "emitDeclarationOnly": true
  },
  "include": ["lib/**/*", "tmp/constants/**/*"]
}
