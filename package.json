    "test": "TZ=UTC jest --coverage",
    "test:snapshot:update": "TZ=UTC jest -u",
    "test:watch": "TZ=UTC jest --watch",
    "test:without-coverage": "TZ=UTC jest"
  },
  "lint-staged": {
    "*.ts": [
