{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext"
    ],
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@romcal/*": ["lib/*"],
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "lib/**/*",
    "bundles/**/*",
    "tests/**/*"
  ]
}
