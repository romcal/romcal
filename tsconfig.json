{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2022", "esnext"],
    "target": "es2022",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@romcal/shared": ["packages/shared/src"],
      "@romcal/shared/*": ["packages/shared/src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["lib/**/*", "tests/**/*", "scripts/**/*", "tmp/bundles/**/*", "tmp/constants/**/*"],
  "files": ["global.d.ts"]
}
